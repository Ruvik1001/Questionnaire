<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.QuestionnaireCore" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="textInputStyle">@style/GlobalTextInputStyle</item>
        <item name="materialButtonStyle">@style/GlobalButtonStyle</item>
    </style>

    <style name="Theme.QuestionnaireCoreDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue2</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="textInputStyle">@style/GlobalTextInputStyle</item>
        <item name="materialButtonStyle">@style/GlobalButtonStyle</item>
    </style>

    <style name="GlobalTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minWidth">@dimen/core_theme_big_width</item>
    </style>

    <style name="GlobalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GlobalTextInputStyle.Big">
        <item name="android:minWidth">@dimen/core_theme_big_width</item>
    </style>

    <style name="GlobalTextInputStyle.Secondary">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GlobalTextInputStyle.Secondary.Big">
        <item name="android:minWidth">@dimen/core_theme_big_width</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">@dimen/core_standard_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:textSize">@dimen/core_sub_text</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ListItemPrice">
        <item name="android:textSize">@dimen/core_standard_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ClickableIcon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">@dimen/core_small_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ClickableIcon2">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ClickableIcon3">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BaseTextHint">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileValueTextView" parent="BaseTextHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/core_standard_text</item>
        <item name="android:layout_marginStart">@dimen/core_standard_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TitleTextView" parent="BaseTextHint">
        <item name="android:textSize">@dimen/core_big_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/core_big_text</item>
        <item name="android:layout_marginTop">@dimen/core_standard_margin</item>
    </style>

    <style name="MiddleTextBlack">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>